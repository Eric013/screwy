section#npm-installer
	width 100%
	height 160px
	background-color rgb(35,35,35)
	position absolute
	bottom 0
	left 0
	box-shadow inset 0 1px 2px rgba(0,0,0,.5), 0 -1px 4px rgba(0,0,0,.4)
	border-top 3px solid rgb(204,54,50)
	z-index 10
	transition bottom .35s ease, background-color .2s ease
	&.hide
		bottom -200px
	&.error
		background-color rgb(204,54,50)
	&.success
		// background-color rgb(240,240,240)
		background-color rgb(27,84,159)
	span, label, div
		color white
		vertical-align middle
		display inline-block
	span, label, input, div
		font-family font-stack !important
	form
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
		width 90%
		height 70%
		// background-color orange
		img.loader
			height 15px
			width 15px
			position absolute
			bottom 6px
			right 15%
			user-select none
			pointer-events none
			visibility hidden
			&.active
				visibility visible
				animation spin .75s linear infinite
		div#npm-installer-command-line
			width 100%
			height 40px
			position relative
			margin 0 auto
			padding 8px 0
			background-color rgb(40,40,40)
			outline 1px solid rgb(25,25,25)
			box-shadow 0 2px 3px rgba(0,0,0,.3)
			div.npm-install
				width 26%
				display block
				// background-color purple
				margin 0
				position absolute
				top 50%
				left 2%
				transform translateY(-50%)
				height 30px
				line-height 30px
				color white
			input#package-name
				outline-offset 0
				padding 0
				height 30px
				line-height 30px
				text-indent 5px
				font-size 15px
				margin 0
				outline 1px solid rgba(255,255,255,.2)
				border none
				color white
				background-color rgba(255,255,255,.1)
				width 67%
				position absolute
				top 50%
				right 3%
				transform translateY(-50%)
				transition outline .3s ease, background-color .3s ease
				&:focus
					outline 1px solid rgba(0,0,0,.4)
					background-color rgb(20,20,20)
				&::-webkit-input-placeholder
					color rgba(255,255,255,.6)
		fieldset.radios
			position absolute
			bottom 0
			left 0
			label
				display inline-block
				margin 2px 0
				vertical-align middle
				font-size 15px
				input
					margin-left 6px
	input#npm-installer-submit
		position absolute
		right 0
		bottom 0
		outline none
		border none
		background-color rgb(45,45,45)
		font-size 17px
		padding 5px 10px
		color white
		cursor pointer
		outline 1px solid rgb(10,10,10)
		box-shadow 0 2px 1px rgba(0,0,0,.6)
		transition background-color .3s ease
		&:hover
			background-color rgb(55,55,55)

div#cover
	position fixed
	bottom 0
	left 0
	height 100%
	width 100%
	background-color rgba(0,0,0,.5)
	z-index 1
	transition background-color .35s ease
	&.hide
		height 0
		width 0
		background-color rgba(0,0,0,0)
